<assembly>
	<id>nsis</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>dir</format>
	</formats>
	<files>
		<file>
			<source>bin/win32/setup.nsi</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${project.build.directory}/chenance.exe</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>bin/License.rtf</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>cn.sh.fang.chenance:chenance-gui</include>
				<include>cn.sh.fang.chenance:chenance-data</include>
			</includes>
			<binaries>
				<outputDirectory>/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib/</outputDirectory>
						<!-- we don't need libs -->
						<excludes>
        					<exclude>*:*</exclude>
      					</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>