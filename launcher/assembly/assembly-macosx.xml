<assembly>
	<id>macosx</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>dir</format>
	</formats>
	<fileSets>
    	<fileSet>
      		<directory>bin/macosx</directory>
      		<outputDirectory>Chenance.app/Contents</outputDirectory>
      		<excludes>
      		<!-- 
      			<exclude>MacOS/chenance</exclude>
      		 -->
      		    <exclude>MacOS/Info2.plist</exclude>
      		</excludes>
      		<filtered>true</filtered>
    	</fileSet>
    	<fileSet>
      		<directory>../chenance-gui/lib</directory>
      		<outputDirectory>Chenance.app/Contents/Resources/Java</outputDirectory>
      		<excludes>
      			<exclude>README.txt</exclude>
      			<exclude>javabuilder.*</exclude>
      		</excludes>
      		<filtered>true</filtered>
    	</fileSet>
  	</fileSets>
  	<files>
  		<file>
			<source>bin/macosx/MacOS/chenance</source>
			<outputDirectory>Chenance.app/Contents/MacOS</outputDirectory>
			<fileMode>0755</fileMode>
			<filtered>true</filtered>
  		</file>
  	</files>
  	<moduleSets>
		<moduleSet>
			<includes>
				<include>cn.sh.fang.chenance:chenance-gui</include>
				<include>cn.sh.fang.chenance:chenance-data</include>
			</includes>
			<binaries>
				<outputDirectory>Chenance.app/Contents/Resources/Java</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>Chenance.app/Contents/Resources/Java/lib</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>